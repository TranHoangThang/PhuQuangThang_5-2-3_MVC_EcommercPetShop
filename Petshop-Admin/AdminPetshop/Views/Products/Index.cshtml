@model IEnumerable<AdminPetshop.Data.Product>

@{
    ViewData["Title"] = "Products Management";
    Layout = "_SidebarLayout";
}

<h1>Products Management</h1>
<p style="margin-left: 92%">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Images</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock Quantity</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
 <tbody style="width:fit-content;">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.ProductImages != null && item.ProductImages.Any())
                            {
                              foreach (var image in item.ProductImages)
                                 {
                                   <img src="@image.ImageUrl" alt="Product Image" style="width: 100px; height: auto; margin-right: 5px; object-fit:cover;" />
                                 }
                             }
                         else
                             {
                                <span>No Images</span>
                             }
                     </td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.StockQuantity)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
        
                    <td style="width:max-content">
                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning btn-sm" type="button" style="font-size:small; font-weight: bold; color:#0a2351;">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-info" type="button" style="font-size:small; font-weight: bold; color:#f2f2f2;">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm" type="button" style="font-size:small; font-weight: bold; color:#f2f2f2;" onclick="return confirm('Are you sure you want to delete this products?');">Delete</a>
                    </td>
                </tr>
            }
</tbody>
</table>