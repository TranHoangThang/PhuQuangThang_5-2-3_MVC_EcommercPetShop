@model IEnumerable<AdminPetshop.Data.Category>

@{
    ViewBag.Title = "Categories Management";
    Layout = "~/Views/Shared/_CategoriesLayout.cshtml";  // Sử dụng layout admin
}
    <table class="table">
        <thead>
            <tr>
            
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody style="width:fit-content;">
            @foreach (var item in Model)
            {
                <tr>
                
                    <td style="margin-left: 80%">
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td style="margin-left: 80%">
                        <a href="@Url.Action("Edit", new { id = item.CategoryId })" class="btn btn-warning btn-sm" role="button" style="font-weight: bold; color:#0a2351;"><i class="fas fa-edit"></i> Edit</a> |

                        <a href="@Url.Action("Delete", new { id = item.CategoryId })" class="btn btn-danger btn-sm" role="button" style="font-weight: bold; color:#f2f2f2;" onclick="return confirm('Are you sure you want to delete this category?');"><i class="fas fa-trash"></i> Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>