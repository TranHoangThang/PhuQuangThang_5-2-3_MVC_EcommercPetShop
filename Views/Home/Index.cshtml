@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home - PetShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href='https://fonts.googleapis.com/css?family=Rubik' rel='stylesheet'>
    <style>
        body {
            margin: 0;
            padding: 0;
            position: relative;
            overflow: hidden;
            font-family: 'Rubik';
        }

        .background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            transition: background-image 0.5s ease-in-out;
            z-index: -1;
        }

        .background-1 {
            background-image: url('/images/Shop1.jpg');
        }

        .background-2 {
            background-image: url('/images/Shop2.jpg');
        }

        .background-3 {
            background-image: url('/images/Shop3.jpg');
        }

        .background-4 {
            background-image: url('/images/Shop4.jpg');
        }

        .container {
            position: relative;
            z-index: 1;
        }

        .carousel {
            margin: 60px auto;
            width: 100%;
        }

        .carousel-item {
            position: relative;
        }

        .carousel-item img {
            height: 75vh;
            object-fit: cover;
        }

        .carousel-indicators [data-bs-target] {
            background-color: white;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            margin: 0 4px;
        }

        .carousel-indicators .active {
            background-color: #ffcc00;
            width: 20px;
            height: 20px;
        }

        .carousel-control-prev,
        .carousel-control-next {
            color: white;
            font-size: 4em;
            text-decoration: none;
        }

        .carousel-control-prev:hover,
        .carousel-control-next:hover {
            color: #ffcc00;
            transform: scale(1.2);
        }
    </style>
</head>
<body class="background-1">
    <div class="container">
        <main role="main" class="pb-3">
            <!-- Slider -->
            <div id="petShopCarousel" class="carousel slide" data-bs-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-bs-target="#petShopCarousel" data-bs-slide-to="0" class="active"></li>
                    <li data-bs-target="#petShopCarousel" data-bs-slide-to="1"></li>
                    <li data-bs-target="#petShopCarousel" data-bs-slide-to="2"></li>
                    <li data-bs-target="#petShopCarousel" data-bs-slide-to="3"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/Shop1.jpg" class="d-block w-100" alt="PetShop Image 1">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/Shop2.jpg" class="d-block w-100" alt="PetShop Image 2">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/Shop3.jpg" class="d-block w-100" alt="PetShop Image 3">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/Shop4.jpg" class="d-block w-100" alt="PetShop Image 4">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#petShopCarousel" role="button" data-bs-slide="prev">
                    <i class="fas fa-chevron-left" aria-hidden="true"></i>
                    <span class="visually-hidden">Previous</span>
                </a>
                <a class="carousel-control-next" href="#petShopCarousel" role="button" data-bs-slide="next">
                    <i class="fas fa-chevron-right" aria-hidden="true"></i>
                    <span class="visually-hidden">Next</span>
                </a>
            </div>
            <!-- Slider -->
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#petShopCarousel').on('slid.bs.carousel', function () {
                var activeIndex = $('#petShopCarousel .carousel-item.active').index();
                var bodyClass = 'background-' + (activeIndex + 1);
                $('body').attr('class', bodyClass);
            });
        });
    </script>
</body>
</html>
